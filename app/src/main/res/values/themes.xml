<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AssignmentApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_app</item>
        <item name="colorPrimaryVariant">@color/blue_app</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="text_view_appbar">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="text_view_14">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_view_14.grey">
        <item name="android:textColor">@color/grey_text</item>
    </style>

    <style name="text_view_14.bold">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="text_view_12">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_view_12.blue">
        <item name="android:textColor">@color/blue_app</item>
    </style>
</resources>